<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="chartViewModel"
            type="com.example.managespending.presentation.chart.ChartViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.chart.ChartFragment"
        android:id="@+id/rootLayout"
        android:background="#DDDDDD">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintTop_toBottomOf="@id/rev"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:textDirection="ltr"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorColor="@color/cardview"
            app:tabSelectedTextColor="@color/black"
            android:background="@drawable/cardview"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_chart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/tab"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/view_dim_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone"
            android:onClick="@{()->chartViewModel.showViewBackground()}"/>

        <RelativeLayout
            android:id="@+id/rev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDDDDD"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/imgback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_arrow"
                android:onClick="@{()->chartViewModel.onBackClicked()}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/imgback"
                android:text="CHART"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/btndate"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_toStartOf="@id/btnphanloai"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/black"
                android:onClick="@{()->chartViewModel.showCalendar()}"/>

            <ImageView
                android:id="@+id/btnphanloai"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/phanloai"
                app:tint="@color/black"
                android:onClick="@{()->chartViewModel.showPhanLoai()}"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutPL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/white">
            <CheckBox
                android:id="@+id/cbochitieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiêu"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:padding="10dp" />
            <CheckBox
                android:id="@+id/cbothunhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu nhập"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:padding="10dp"
                android:layout_below="@id/cbochitieu" />
            <Button
                android:id="@+id/btnok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="OK"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:cornerRadius="5dp"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutdate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclermonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleryear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>